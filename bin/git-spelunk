#!/usr/bin/env ruby
require 'git_spelunk'

# easy way to log during development since puts does not work
def log(stuff)
  File.open('git-spelunk.log','ab'){|f| f.puts stuff }
end

file_context = GitSpelunk::FileContext.new(ARGV[0], {:sha => ARGV[1], :line_number => ARGV[2]})
ui = GitSpelunk::UI.new(file_context)
ui.run
